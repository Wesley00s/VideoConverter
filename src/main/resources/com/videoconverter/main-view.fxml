<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.ProgressBar?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.videoconverter.MainController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="ProRes to HEVC Converter" styleClass="header-label"/>

    <HBox alignment="CENTER_RIGHT" spacing="15.0" maxWidth="1200" prefWidth="900">
        <Button text="+ Add Files..." onAction="#onSelectFilesClick"/>
    </HBox>

    <ListView fx:id="fileListView" VBox.vgrow="ALWAYS" maxWidth="1200" prefWidth="900">
        <placeholder>
            <Label text="Drag &amp; drop video files here&#10;or use the Add button above"
                   textAlignment="CENTER"/>
        </placeholder>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem text="Remove Selected" onAction="#onRemoveSelectedClick"/>
                </items>
            </ContextMenu>
        </contextMenu>
    </ListView>

    <VBox spacing="15" alignment="CENTER">
        <Label fx:id="totalSizeLabel" text="Total Size: 0 MB" style="-fx-font-weight: bold; -fx-text-fill: #aaaaaa;"/>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="clearButton"
                    text="Clear List"
                    onAction="#onClearListClick"
                    styleClass="danger-button"/>

            <Button fx:id="convertButton"
                    text="Start Conversion"
                    onAction="#onConvertClick"
                    styleClass="action-button"/>
        </HBox>
    </VBox>

    <ProgressBar fx:id="progressBar"
                 prefWidth="400"
                 progress="0.0"
                 visible="false"/>

    <Label fx:id="statusLabel" text="Ready"
           style="-fx-font-size: 11px; -fx-text-fill: #666666;"
           maxWidth="Infinity" HBox.hgrow="ALWAYS"/>

    <Button text="View Logs" onAction="#onShowLogsClick"
            style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-underline: true; -fx-cursor: hand; -fx-font-size: 11px;"/>

</VBox>